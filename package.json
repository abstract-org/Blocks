{
  "name": "@daniely/knowledge-editor",
  "description": "Knowledge Editor",
  "author": "Daniel Yogel",
  "version": "0.0.1",
  "license": "MIT",
  "main": "./dist/KnowlegeEditor.umd.js",
  "module": "./dist/KnowlegeEditor.es.js",
  "exports": {
    ".": {
      "import": "./dist/KnowlegeEditor.es.js",
      "require": "./dist/KnowlegeEditor.umd.js"
    }
  },
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "concurrently  --group  --raw \"vite\" \"tsc --noEmit --watch\" \"npm run storybook\" \"npm run test\"",
    "build": "concurrently --raw \"vite build\" \"npm run build:types\"",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "engines": {
    "node": ">=12"
  },
  "prettier": {
    "useTabs": false,
    "semi": true,
    "tabWidth": 2,
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "singleQuote": true,
    "trailingComma": "none",
    "jsxSingleQuote": true,
    "printWidth": 150,
    "arrowParens": "avoid"
  },
  "dependencies": {
    "@dnd-kit/core": "^3.1.1",
    "@dnd-kit/modifiers": "^3.0.0",
    "@dnd-kit/sortable": "^4.0.0",
    "@headlessui/react": "^1.5.0",
    "@heroicons/react": "^1.0.6",
    "@tiptap/extension-heading": "^2.0.0-beta.26",
    "@tiptap/extension-highlight": "^2.0.0-beta.33",
    "@tiptap/extension-image": "^2.0.0-beta.27",
    "@tiptap/extension-link": "^2.0.0-beta.36",
    "@tiptap/extension-placeholder": "^2.0.0-beta.48",
    "@tiptap/extension-text-align": "^2.0.0-beta.29",
    "@tiptap/extension-underline": "^2.0.0-beta.23",
    "@tiptap/react": "^2.0.0-beta.108",
    "@tiptap/starter-kit": "^2.0.0-beta.183",
    "fp-ts": "2.11.9",
    "io-ts": "^2.2.16",
    "lodash": "^4.17.21",
    "mobx": "^6.5.0",
    "mobx-react-lite": "^3.3.0",
    "nanoid": "^3.3.2",
    "tailwindcss": "3.0.23",
    "tsd": "^0.20.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^6.4.21",
    "@storybook/addons": "^6.4.21",
    "@storybook/react": "^6.4.21",
    "@types/lodash": "^4.14.181",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "@types/ws": "^8.5.3",
    "classnames": "^2.3.1",
    "concurrently": "7.1.0",
    "postcss": "^8.4.12",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "storybook-builder-vite": "^0.1.22",
    "ts-toolbelt": "9.6.0",
    "tslib": "^2.3.1",
    "type-fest": "2.12.2",
    "typescript": "^4.6.3",
    "vite": "^2.9.1",
    "vitest": "^0.9.3"
  },
  "peerDependencies": {
    "mobx": "^6.5.0",
    "react": ">=16"
  }
}
